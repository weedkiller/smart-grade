@page
@using FirestormSW.SmartGrade.Api.Admin
@using FirestormSW.SmartGrade.Database
@using FirestormSW.SmartGrade.Database.Model
@using FirestormSW.SmartGrade.Export.Renderers
@model FirestormSW.SmartGrade.Pages.Admin.Students
@inject AppDatabase Database;

@{
    Layout = "Shared/Admin/AdminLayout";
}

<!--begin::Entry-->
<div class="d-flex flex-column-fluid">
    <!--begin::Container-->
    <div class="container">
        <!--begin::Card-->
        <div class="card card-custom">
            <div class="card-header py-3">
                <div class="card-title">
                    <span class="card-icon">
                        <span class="svg-icon svg-icon-md svg-icon-primary">
                            <img data-svg="true" alt="" src="~/assets/admin/media/svg/icons/Communication/Group.svg"/>
                        </span>
                    </span>
                    <h3 class="card-label">Students</h3>
                </div>
                <div class="card-toolbar">
                    <!--begin::Dropdown-->
                    <div class="dropdown dropdown-inline mr-2">
                        <button type="button" class="btn btn-light-primary font-weight-bolder dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="la la-download"></i>Export
                        </button>
                        <!--begin::Dropdown Menu-->
                        <div class="dropdown-menu dropdown-menu-sm dropdown-menu-right">
                            <ul class="navi flex-column navi-hover">
                                <li class="navi-header font-weight-bolder text-uppercase text-primary pb-2">Choose an option:</li>
                                <li class="navi-item">
                                    <a href="javascript:;" class="navi-link"
                                       onclick="exportData('@Url.Action("ExportData", "ExportDataApi")', '@typeof(StudentsApiController).FullName', '@nameof(ExcelRenderer)')">
                                        <i class="navi-icon la la-file-excel-o"></i>
                                        <span class="navi-text">Excel</span>
                                    </a>
                                </li>
                                <li class="navi-item">
                                    <a href="#" class="navi-link"
                                       onclick="exportData('@Url.Action("ExportData", "ExportDataApi")', '@typeof(StudentsApiController).FullName', '@nameof(CsvRenderer)')">
                                        <i class="navi-icon la la-file-text-o"></i>
                                        <span class="navi-text">CSV</span>
                                    </a>
                                </li>
                                <li class="navi-item">
                                    <a href="#" class="navi-link"
                                       onclick="exportData('@Url.Action("ExportData", "ExportDataApi")', '@typeof(StudentsApiController).FullName', '@nameof(PdfRenderer)')">
                                        <i class="navi-icon la la-file-pdf-o"></i>
                                        <span class="navi-text">PDF</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <!--end::Dropdown Menu-->
                    </div>
                    <!--end::Dropdown-->
                    <!--begin::Button-->
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#newRecordModal" onclick="resetModal()">
                        <i class="la la-plus"></i>New Record
                    </button>

                    <!-- Modal-->
                    <div class="modal fade" id="newRecordModal" tabindex="-1" role="dialog" aria-labelledby="newRecordModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="newRecordModalLabel">Create Student User</h5>
                                    <h5 class="modal-title" id="editRecordModalLabel" style="display: none;">Edit Student User</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <i aria-hidden="true" class="ki ki-close"></i>
                                    </button>
                                </div>
                                <form class="form" asp-controller="StudentsApi" asp-action="CreateEntry" id="kt_form_1">
                                    <div class="modal-body">
                                        <div class="card-body">
                                            <div class="form-group">
                                                <label>Full Name <span class="text-danger">*</span></label>
                                                <input type="text" name="fullName" class="form-control" placeholder="Enter full name"/>
                                            </div>
                                            <div class="form-group">
                                                <label>Login Name <span class="text-danger">*</span></label>
                                                <input type="text" name="loginName" class="form-control" placeholder="Enter login name or email"/>
                                            </div>
                                            <div class="form-group">
                                                <label>Notification Email</label>
                                                <input type="email" name="notificationEmail" class="form-control" placeholder="Enter a notification email"/>
                                            </div>
                                            <div class="form-group">
                                                <label>Class </label>
                                                <div>
                                                    <select class="form-control" name="group" style="width: 100%;">
                                                        @foreach (var group in Database.Groups.Where(g => g.GroupType == GroupType.Class))
                                                        {
                                                            <option value="@group.Id">@group.Name</option>
                                                        }
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label for="exampleInputPassword1">Password <span class="text-danger">*</span></label>
                                                <input type="password" class="form-control" name="password" id="exampleInputPassword1" placeholder="Password"/>
                                            </div>
                                            <input type="hidden" name="existingId" value="-1"/>
                                        </div>

                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-light-primary font-weight-bold" data-dismiss="modal">Cancel</button>
                                        <button type="submit" class="btn btn-primary font-weight-bold" id="btn_save_create_item">Save</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <!--end::Modal-->
                </div>
            </div>
            <div class="card-body">
                <!--begin::Search Form-->
                <div class="mt-2 mb-7">
                    <div class="row align-items-center">
                        <div class="col-lg-9 col-xl-8">
                            <div class="row align-items-center">
                                <div class="col-md-4 my-2 my-md-0">
                                    <div class="input-icon">
                                        <input type="text" class="form-control" placeholder="Search..." id="kt_datatable_search_query"/>
                                        <span>
                                            <i class="flaticon2-search-1 text-muted"></i>
                                        </span>
                                    </div>
                                </div>
                                <div class="col-md-4 my-2 my-md-0">
                                    <div class="d-flex align-items-center">
                                        <label class="mr-3 mb-0 d-none d-md-block">Class:</label>
                                        <select class="form-control" id="kt_datatable_search_class">
                                            <option value="">All</option>
                                            @foreach (var group in Database.Groups.Where(g => g.GroupType == GroupType.Class))
                                            {
                                                <option value="@group.Id">@group.Name</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--end::Search Form-->
                <!--end: Search Form-->
                <!--begin: Datatable-->
                <div class="datatable datatable-bordered datatable-head-custom" id="kt_datatable"></div>
                <!--end: Datatable-->
            </div>
        </div>
        <!--end::Card-->
    </div>
    <!--end::Container-->
</div>
<!--end::Entry-->

<script>
    let API_PATH = "/api/admin/students/";
    
    let formValidationFields = {
        fullName: {
            validators: {
                notEmpty: {
                    message: 'Full name is required'
                }
            }
        },
        loginName: {
            validators: {
                notEmpty: {
                    message: 'Login name is required'
                }
            }
        }
    };
    
    let datatableDataColumns = [
        {
            field: 'FullName',
            title: 'Full Name'
        }, {
            field: 'LoginName',
            title: 'Login Name'
        }, {
            field: 'ClassName',
            title: 'Class'
        }, {
            field: 'LastLogin',
            title: 'Last Login',
            type: 'date',
            format: 'YYYY-MM-DD'
        }, {
            field: 'Actions',
            title: 'Actions',
            sortable: false,
            width: 125,
            overflow: 'visible',
            autoHide: false,
            template: function (row) {
                let showImpersonateBtn = row.Id != userId && !isImpersonated;
                return `\
