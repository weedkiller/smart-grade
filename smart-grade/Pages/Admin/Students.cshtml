                            </svg>\
                        </span>\
                    </a>\
                `;
            },
        }
    ];
    
    function setupEditModal(row) {
        row = JSON.parse(decodeURIComponent(row));
        console.log(row)
        
        $('#editRecordModalLabel').show();
        $('#newRecordModalLabel').hide();
        $('#newRecordModal').modal('show');
        $('#newRecordModal input[name="fullName"]').val(row.FullName);
        $('#newRecordModal input[name="loginName"]').val(row.LoginName);
        $('#newRecordModal input[name="notificationEmail"]').val(row.NotificationEmail);
        $('#newRecordModal input[name="password"]').val(row.HasPassword ? "**********" : "");
        $('#newRecordModal select[name="group"]').val(row.ClassId);
        $('#newRecordModal input[name="existingId"]').val(row.Id);
    }
    
    function resetModal() {
        $('#editRecordModalLabel').hide();
        $('#newRecordModalLabel').show();
        $('#newRecordModal input[name="fullName"]').val('');
        $('#newRecordModal input[name="loginName"]').val('');
        $('#newRecordModal input[name="notificationEmail"]').val('');
        $('#newRecordModal input[name="password"]').val('');
        $('#newRecordModal input[name="existingId"]').val(-1);
    }
</script>

<script src="~/assets/admin/js/pages/crud_common.js"></script>

<script>
    $('#kt_datatable_search_class').on('change', function() {
        datatable.search($(this).val().toLowerCase(), 'ClassId');
    });
</script>