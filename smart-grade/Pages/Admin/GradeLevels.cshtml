                        <span class="svg-icon svg-icon-md">\
                            <svg xmlns="http://www.w3.org/2000/svg" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">\
                                <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">\
                                    <rect x="0" y="0" width="24" height="24"/>\
                                    <path d="M6,8 L6,20.5 C6,21.3284271 6.67157288,22 7.5,22 L16.5,22 C17.3284271,22 18,21.3284271 18,20.5 L18,8 L6,8 Z" fill="#000000" fill-rule="nonzero"/>\
                                    <path d="M14,4.5 L14,4 C14,3.44771525 13.5522847,3 13,3 L11,3 C10.4477153,3 10,3.44771525 10,4 L10,4.5 L5.5,4.5 C5.22385763,4.5 5,4.72385763 5,5 L5,5.5 C5,5.77614237 5.22385763,6 5.5,6 L18.5,6 C18.7761424,6 19,5.77614237 19,5.5 L19,5 C19,4.72385763 18.7761424,4.5 18.5,4.5 L14,4.5 Z" fill="#000000" opacity="0.3"/>\
                                </g>\
                            </svg>\
                        </span>\
                    </a>\
                ';
            },
        }
    ];
    
    function setupEditModal(row) {
        row = JSON.parse(decodeURIComponent(row));
        console.log(row)
        
        $('#editRecordModalLabel').show();
        $('#newRecordModalLabel').hide();
        $('#newRecordModal').modal('show');
        $('#newRecordModal input[name="name"]').val(row.Name);
        $('#newRecordModal input[name="existingId"]').val(row.Id);
        $('#newRecordModal input[name="emailGradeAdded"]').prop('checked', row.GradeAdded);
        $('#newRecordModal input[name="emailGradeDeleted"]').prop('checked', row.GradeDeleted);
        $('#newRecordModal input[name="emailAbsenceAdded"]').prop('checked', row.AbsenceAdded);
        $('#newRecordModal input[name="emailAbsenceDeleted"]').prop('checked', row.AbsenceDeleted);
        $('#newRecordModal input[name="emailDisciplinaryAdded"]').prop('checked', row.DisciplinaryAdded);
        $('#newRecordModal input[name="emailDisciplinaryDeleted"]').prop('checked', row.DisciplinaryDeleted);
    }
    
    function resetModal() {
        $('#editRecordModalLabel').hide();
        $('#newRecordModalLabel').show();
        $('#newRecordModal input[name="name"]').val('');
        $('#newRecordModal input[name="existingId"]').val(-1);
        $('#newRecordModal input[name="emailGradeAdded"]').prop('checked', false);
        $('#newRecordModal input[name="emailGradeDeleted"]').prop('checked', false);
        $('#newRecordModal input[name="emailAbsenceAdded"]').prop('checked', false);
        $('#newRecordModal input[name="emailAbsenceDeleted"]').prop('checked', false);
        $('#newRecordModal input[name="emailDisciplinaryAdded"]').prop('checked', false);
        $('#newRecordModal input[name="emailDisciplinaryDeleted"]').prop('checked', false);
    }
</script>

