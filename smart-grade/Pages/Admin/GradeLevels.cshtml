    let API_PATH = "/api/admin/grade_levels/";
    
    let formValidationFields = {
        name: {
            validators: {
                notEmpty: {
                    message: 'Name is required'
                }
            }
        }
    };
    
    let datatableDataColumns = [
        {
            field: 'Name',
            title: 'Name'
        }, {
            field: 'GroupCount',
            title: 'Classes'
        }, {
            field: 'Actions',
            title: 'Actions',
            sortable: false,
            width: 125,
            overflow: 'visible',
            autoHide: false,
            template: function (row) {
                return '\
