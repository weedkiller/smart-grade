@page
@using FirestormSW.SmartGrade.Api.Admin
@using FirestormSW.SmartGrade.Database
@using FirestormSW.SmartGrade.Database.Model
@using FirestormSW.SmartGrade.Export.Renderers
@model FirestormSW.SmartGrade.Pages.Admin.Attendance
@inject AppDatabase Database;

@{
    Layout = "Shared/Admin/AdminLayout";
}

<!--begin::Entry-->
<div class="d-flex flex-column-fluid">
    <!--begin::Container-->
    <div class="container">
        <!--begin::Card-->
        <div class="card card-custom">
            <div class="card-header py-3">
                <div class="card-title">
                    <span class="card-icon">
                        <span class="svg-icon svg-icon-md svg-icon-primary">
                            <img data-svg="true" alt="" src="~/assets/admin/media/svg/icons/Communication/Add-user.svg"/>
                        </span>
                    </span>
                    <h3 class="card-label">Absences</h3>
                </div>
                <div class="card-toolbar">
                    <!--begin::Dropdown-->
                    <div class="dropdown dropdown-inline mr-2">
                        <button type="button" class="btn btn-light-primary font-weight-bolder dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="la la-download"></i>Export
                        </button>
                        <!--begin::Dropdown Menu-->
                        <div class="dropdown-menu dropdown-menu-sm dropdown-menu-right">
                            <ul class="navi flex-column navi-hover">
                                <li class="navi-header font-weight-bolder text-uppercase text-primary pb-2">Choose an option:</li>
                                <li class="navi-item">
                                    <a href="javascript:;" class="navi-link"
                                       onclick="exportData('@Url.Action("ExportData", "ExportDataApi")', '@typeof(AbsencesApiController).FullName', '@nameof(ExcelRenderer)')">
                                        <i class="navi-icon la la-file-excel-o"></i>
                                        <span class="navi-text">Excel</span>
                                    </a>
                                </li>
                                <li class="navi-item">
                                    <a href="javascript:;" class="navi-link"
                                       onclick="$('#modalExportAttendance').modal(true)">
                                        <i class="navi-icon la la-file-excel-o"></i>
                                        <span class="navi-text">Monthly Sheet</span>
                                    </a>
                                </li>
                                <li class="navi-item">
                                    <a href="#" class="navi-link"
                                       onclick="exportData('@Url.Action("ExportData", "ExportDataApi")', '@typeof(AbsencesApiController).FullName', '@nameof(CsvRenderer)')">
                                        <i class="navi-icon la la-file-text-o"></i>
                                        <span class="navi-text">CSV</span>
                                    </a>
                                </li>
                                <li class="navi-item">
                                    <a href="#" class="navi-link"
                                       onclick="exportData('@Url.Action("ExportData", "ExportDataApi")', '@typeof(AbsencesApiController).FullName', '@nameof(PdfRenderer)')">
                                        <i class="navi-icon la la-file-pdf-o"></i>
                                        <span class="navi-text">PDF</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <!--end::Dropdown Menu-->
                    </div>
                    <!--end::Dropdown-->
                </div>
            </div>
            <div class="card-body">
                <!--begin::Search Form-->
                <div class="mt-2 mb-7">
                    <div class="row align-items-center">
                        <div class="w-100">
                            <div class="row align-items-center">
                                <div class="col-md-2 my-2 my-md-0">
                                    <div class="input-icon">
                                        <input type="text" class="form-control" placeholder="Search..." id="kt_datatable_search_name"/>
                                        <span>
                                            <i class="flaticon2-search-1 text-muted"></i>
                                        </span>
                                    </div>
                                </div>
                                <div class="col-md-2 my-2 my-md-0">
                                    <div class="d-flex align-items-center">
                                        <label class="mr-3 mb-0 d-none d-md-block">Class:</label>
                                        <select class="form-control" id="kt_datatable_search_class">
                                            <option value="">All</option>
                                            @foreach (var group in Database.Groups.Where(g => g.GroupType == GroupType.Class))
                                            {
                                                <option value="@group.Id">@group.Name</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-2 my-2 my-md-0">
                                    <div class="d-flex align-items-center">
                                        <label class="mr-3 mb-0 d-none d-md-block">Subject:</label>
                                        <select class="form-control" id="kt_datatable_search_subject">
                                            <option value="">All</option>
                                            @foreach (var subject in Database.Subjects)
                                            {
                                                <option value="@subject.Id">@subject.Name</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-2 my-2 my-md-0">
                                    <div class="d-flex align-items-center">
                                        <label class="mr-3 mb-0 d-none d-md-block">Verified:</label>
                                        <select class="form-control" id="kt_datatable_search_verified">
                                            <option value="">All</option>
                                            <option value="true">Yes</option>
                                            <option value="false">No</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-2 my-2 my-md-0">
                                    <div class="d-flex align-items-center">
                                        <label class="mr-3 mb-0 d-none d-md-block">Semester:</label>
                                        <select class="form-control" id="kt_datatable_search_semester">
                                            <option value="">All</option>
                                            <option value="1">1</option>
                                            <option value="2">2</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-2 my-2 my-md-0">
                                    <div class="d-flex align-items-center">
                                        <label class="mr-3 mb-0 d-none d-md-block">Date:</label>
                                        <input type="text" class="form-control" id="kt_datatable_search_date" readonly placeholder="Select time"/>
                                        <script>
                                        $('#kt_datatable_search_date').daterangepicker({
                                            autoUpdateInput: false,
                                            buttonClasses: ' btn',
                                            applyClass: 'btn-primary',
                                            cancelClass: 'btn-secondary'
                                        });
                                        </script>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--end::Search Form-->
                <!--end: Search Form-->
                <!--begin: Datatable-->
                <div class="datatable datatable-bordered datatable-head-custom" id="kt_datatable"></div>
                <!--end: Datatable-->
            </div>
        </div>
        <!--end::Card-->
    </div>
    <!--end::Container-->
</div>
<!--end::Entry-->

<!-- Modal-->
<div class="modal fade" id="modalExportAttendance" tabindex="-1" role="dialog" aria-labelledby="newRecordModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Export Absences</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <i aria-hidden="true" class="ki ki-close"></i>
                </button>
            </div>
            <div class="modal-body">
                <div class="card-body">
                    <div class="form-group">
                        <label>Month</label>
                        <input class="form-control" type="month" id="export-month-input"/>
                        <script>
                            let date = new Date(); 
                            $('#export-month-input').val(`${date.getFullYear()}-${(date.getMonth() + 1).toLocaleString('en-US', {minimumIntegerDigits: 2})}`);
                        </script>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light-primary font-weight-bold" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary font-weight-bold" id="btn_save_create_item"
                        onclick="exportData('@Url.Action("ExportData", "ExportDataApi")', '@typeof(AbsencesApiController).FullName', '@nameof(AbsencesExcelRenderer)', $('#export-month-input').val())">Export</button>
            </div>
        </div>
    </div>
</div>
<!--end::Modal-->

<script>
    let API_PATH = "/api/admin/absences/";
    
    let datatableDataColumns = [
        {
            field: 'Value.Student.FullName',
            title: 'Name'
        }, {
            field: 'ClassName',
            title: 'Class'
        }, {
            field: 'Value.Subject.Name',
            title: 'Subject'
        }, {
            field: 'Value.Verified',
            title: 'Verified',
            template: function (row) {
                if (row.Value.Verified === true) 
                    return '<span class="label label-success label-pill label-inline mr-2">yes<span>';
                else 
                    return '<span class="label label-danger label-pill label-inline mr-2">no</span>';
            }
        }, {
            field: 'Value.Semester',
            title: 'Semester'
        }, {
            field: 'Value.Comment',
            title: 'Comment'
        }, {
            field: 'Value.Date',
            title: 'Date'
        }
    ];
    
    $('#kt_datatable_search_name').on('keyup', function() {
        datatable.search($(this).val().toLowerCase(), 'Value.Student.FullName');
    });
    $('#kt_datatable_search_class').on('change', function() {
        datatable.search($(this).val().toLowerCase(), 'ClassId');
    });
    $('#kt_datatable_search_subject').on('change', function() {
        datatable.search($(this).val().toLowerCase(), 'Value.Subject.Id');
    });
    $('#kt_datatable_search_verified').on('change', function() {
        datatable.search($(this).val().toLowerCase(), 'Value.Verified');
    });
    $('#kt_datatable_search_semester').on('change', function() {
        datatable.search($(this).val().toLowerCase(), 'Value.Semester');
    });
    $('#kt_datatable_search_date').on('apply.daterangepicker', function(ev, picker) {
        $(this).val(picker.startDate.format('MM/DD/YYYY') + ' - ' + picker.endDate.format('MM/DD/YYYY'));
        datatable.search(picker.startDate.format('MM/DD/YYYY') + ' - ' + picker.endDate.format('MM/DD/YYYY'), 'Value.Date');
    });
</script>

<script src="~/assets/admin/js/pages/crud_common.js"></script>